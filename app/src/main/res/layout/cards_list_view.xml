<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    android:layout_marginLeft="1dp"
    android:layout_marginRight="1dp"
    android:layout_marginBottom="1dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/iconText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_gravity="left"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="2"
                android:text="YU GI OHYU GI OHYU GI OHYU GI OHYU GI OHYU GI OHYU GI OH"
                android:textSize="16dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="4"
                android:text="YU GdsadsadsadasdIGdsadsadsadasdIGdsadsadsadasdIGdsadsadsadasdIGdsadsadsadasdIGdsadsadsadasdIGdsadsadsadasdIGdsadsadsadasdIGdsadsadsadasdIGdsadsadsadasdIGdsadsadsadasdI OH"
                android:textColor="@color/gray_text"
                android:textSize="10dp" />

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:textSize="12dp"
                android:gravity="right"
                android:lines="1"
                android:text="YU GI OH"
                android:textColor="@color/gray_text" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
